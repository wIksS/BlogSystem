@model IEnumerable<BlogSystem.Web.ViewModels.Post.BlogPostViewModel>
@foreach (var post in Model)
{
    <div class="post type-post">
        <div class="posttitle">
            <h2 class="pagetitle">
                <a href="/@ViewBag.User/@post.Title">@post.Title</a>

                </h2><small>
    Posted : @post.DateCreated in
    <a href="/@ViewBag.User/Category/@post.CategoryName">@post.CategoryName</a>
</small>
        </div>
        <div class="postcomments"><a href="http://viktordakov.wordpress.com/2014/05/20/falling-rocks-game-2/#respond" title="Comment on Falling Rocks Game" sl-processed="1">0</a></div>
        <div class="entry">
            <p>@Html.Raw(@post.Content)</p>
        </div>
    </div>
}
